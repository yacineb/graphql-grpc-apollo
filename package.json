{
  "name": "graphql-grpc",
  "version": "0.1.0",
  "description": "GraphQl server using grPC transport layer",
  "main": "index",
  "scripts": {
    "test:gql": "ts-node src/testGql.ts",
    "test:server": "ts-node src/GraphqlGrpcServer.ts",
    "test:client": "ts-node src/client.ts",
    "build": "tsc && npm run cp-protos",
    "cp-protos": "copyfiles --flat src/protos/*.proto dist/protos"
  },
  "author": "Yacine Bouraoui",
  "license": "ISC",
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "copyfiles": "^2.1.1",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.5.2",
    "graphql": "^14.5.6",
    "grpc": "^1.23.3",
    "mali": "^0.19.0"
  }
}
